{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "Bowden Kelly",
  "license": "MIT",
  "lint-staged": {
    "./**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "npm run serve",
    "dev": "nodemon --inspect dist/server.js",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "build-ts": "./node_modules/typescript/bin/tsc",
    "watch-ts": "./node_modules/typescript/bin/tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@slack/client": "^4.1.0",
    "@types/lodash": "^4.14.106",
    "@types/morgan": "^1.7.35",
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "jshint": "^2.9.5",
    "lodash": "^4.17.5",
    "lusca": "^1.5.2",
    "morgan": "^1.9.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/lusca": "^1.5.0",
    "@types/node": "^9.4.6",
    "@types/shelljs": "^0.7.8",
    "@types/winston": "^2.3.7",
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^7.0.3",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.0",
    "prettier": "1.11.1",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
